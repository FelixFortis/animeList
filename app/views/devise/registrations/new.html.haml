%h2 Sign up
= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
  = f.error_notification
  %br
  .form-inputs
    = f.input :email, :required => true, :autofocus => true
    = f.input :password, :required => true
    = f.input :password_confirmation, :required => true
  .form-actions
    .button-group.round
      %li
        = f.button :submit, "Sign up", :class => "button button-black"
      %li
        = link_to "Log in", new_session_path(resource_name), :class => "button button-black"
      %li
        = link_to "Forgot your password?", new_password_path(resource_name), :class => "button button-black"
-# = render "devise/shared/links"
