%h2 Log in
= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
  .form-inputs
    = f.input :email, :required => false, :autofocus => true
    = f.input :password, :required => false
    = f.input :remember_me, :label => "Remember me", :as => :boolean if devise_mapping.rememberable?
  .form-actions
    .button-group.round
      %li
        = f.button :submit, "Log in", :class => "button button-black"
      %li
        = link_to "Forgot your password?", new_password_path(resource_name), :class => "button button-black"
